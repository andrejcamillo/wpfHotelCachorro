<Window x:Class="HotelCachorro.Views.FrmListarServico"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelCachorro.Views"
        mc:Ignorable="d"
        Title="FrmListarServico" Height="368.067" Width="651.261">
    <Grid>
        <DataGrid x:Name="dgaExibirServico" AutoGenerateColumns="False" Height="161" Margin="57,86,342,0" VerticalAlignment="Top" Loaded="CarregarInfo">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding IdServico}" Header="ID" Width="30"/>
                <DataGridTextColumn Binding="{Binding NomeServico}" Header="Nome" Width="80"/>
                <DataGridTextColumn Binding="{Binding PrecoServico}" Header="Preco" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Serviços" HorizontalAlignment="Left" Margin="57,30,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Black"/>
    </Grid>
</Window>
