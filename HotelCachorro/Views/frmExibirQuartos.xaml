<Window x:Class="HotelCachorro.Views.frmExibirQuartos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelCachorro.Views"
        mc:Ignorable="d"
        Title="frmExibirQuartos" Height="451.261" Width="360.084">
    <Grid Margin="0,0,43,-4">
        <Label Content="Quartos" HorizontalAlignment="Left" Height="32" Margin="30,31,0,0" VerticalAlignment="Top" Width="103" FontSize="20" FontWeight="Bold" RenderTransformOrigin="0.317,0.192"/>
        <DataGrid x:Name="datagridQuartos" HorizontalAlignment="Left" Height="233" AutoGenerateColumns="False" Margin="30,116,0,0" VerticalAlignment="Top" Width="220" Loaded="MostrarQuartos">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding IdQuarto}" Header="ID" Width="30"/>
                <DataGridTextColumn Binding="{Binding NomeQuarto}" Header="NomeQuarto" Width="100"/>
                <DataGridTextColumn Binding="{Binding PrecoQuarto}" Header="PreçoQuarto" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
